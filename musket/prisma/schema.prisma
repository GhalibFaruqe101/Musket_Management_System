generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Customer {
  id             String   @id @default(cuid())
  name           String
  email          String   @unique
  phone          String?
  paymentTotal   Int      @default(0)
  paymentAdvance Int      @default(0)
  paymentDue     Int      @default(0)

  bookedSlots    Slot[]
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Slot {
  id         String     @id @default(cuid())
  time       String
  date       String
  status     SlotStatus @default(Open)
  members    Int        @default(1)
  cost       Int        @default(0)

  bookedBy   Customer?  @relation(fields: [customerId], references: [id])
  customerId String?

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

enum SlotStatus {
  Booked
  Open
  Cancelled
}
